<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#fff">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:src="@drawable/help"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="80dp"
        />
    <TextView
        android:layout_marginLeft="16dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/bold"
        android:text="@string/helpTitle"
        android:layout_width="match_parent"
        android:textColor="@color/darkLight"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:layout_marginBottom="8dp"
        />

    <TextView
        android:layout_marginLeft="16dp"
        android:paddingRight="40dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/regular"
        android:text="@string/helpDescription"
        android:layout_width="match_parent"
        android:textColor="@color/darkLight"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        />

    <Button
        android:id="@+id/askHelp_btn"
        android:text="Ask Help"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:fontFamily="@font/medium"
        android:textSize="18dp"
        android:background="@drawable/button"
        />



    <TextView
        android:text="When you are receiving help show this QR code to complete the transaction."
        android:layout_marginTop="64dp"
        android:layout_marginLeft="16dp"
        android:paddingRight="40dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/regular"
        android:layout_width="match_parent"
        android:textColor="@color/darkLight"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        />

    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/generateQr_btn"
        android:text="QR Code"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textAllCaps="false"
        android:fontFamily="@font/medium"
        android:textSize="18dp"
        android:textColor="@color/dark"
        android:background="@drawable/secondarybutton"
        android:layout_marginBottom="160dp"
        />

    <Button
        android:id="@+id/editRequest"
        android:text="Edit Help Request"

        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textAllCaps="false"
        android:fontFamily="@font/bold"
        android:textColor="#fff"
        android:background="@drawable/button"
        />

        </LinearLayout>
    </ScrollView>
</LinearLayout>