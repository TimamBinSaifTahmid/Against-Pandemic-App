<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NeedyDetails">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:orientation="vertical">

        <!--  this list contains products -->
        <TextView
            android:id="@+id/needyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tahmid" />
        <TextView
            android:id="@+id/needyPhoneNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01963225462" />
        <TextView
            android:id="@+id/needylocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Farmgate" />
        <TextView
            android:id="@+id/needyCurrentCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment" />
        <TextView
            android:id="@+id/needyReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment" />

    </LinearLayout>
